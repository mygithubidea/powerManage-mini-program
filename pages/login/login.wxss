.page {
	width: 100%;
	height: 100%;
	font-size: 0.8rem;
	background-position: center;
	background-size: cover;
	background-repeat: no-repeat;
}

.login_bg {
	position: absolute;
	width: 100%;
	height: 100%;
	z-index: -1;
}

.info {
	width: 80%;
	margin: auto;
	padding-top: 300rpx;
}

.tips {
	text-align: center;
	margin: 20rpx 0;
	font-size: .8rem;
	color: #ff6358;
}

.info .item {
	width: 100%;
	display: flex;
	height: 120rpx;
}

.text1 {
	line-height: 120rpx;
	display: inline-block;
	width: 15%;
}

.phoneNum {
	width: 85%;
	display: flex;
	align-items: center;
}

.phoneNum input {
	margin: 0 10rpx;
	padding-left: 10rpx;
	height: 75rpx;
	border: 1rpx solid #ddd;
	width: 100%;
	border-radius: 3px;
}

.confirmBtn {
	margin-top: 50rpx;
	width: 100% !important;
	background-color: #3d94f3;
	font-weight: 400;
	color: #fff;
	border-radius: 5rpx;
}