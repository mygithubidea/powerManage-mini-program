.jm-popup {
    width: 100%;
    position: absolute;
    height: 100%;
    top: 0;
    left: 0;
    box-sizing: border-box;
    border-radius: 5px;
    background-color: #00000099;
    z-index: 11;
}
.content-area {
    position: absolute;
    width: 100%;
    height: 60%;
    bottom: 0;
    background-color: #fff;
}
.pop-head {
    margin-bottom: 20rpx;
    padding: 0 20rpx 20rpx;
    display: flex;
    justify-content: space-between;
    border-bottom: solid 1rpx #ccc;
}
.pop-head text {
    padding: 2rpx 10rpx;
    font-size: 32rpx;
}
.checkbox-group {
    display: flex;
    flex-wrap: wrap;
    padding: 10rpx 40rpx;
}
.checkbox-group label {
    margin: 4rpx 0;
    width: 33%;
}