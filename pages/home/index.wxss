.jm-card-menu .jm-title {
    display: flex;
    align-items: center;
    margin-left: 12rpx;
    line-height: 52rpx;
    color: rgba(0, 0, 0, 1);
    font-size: 36rpx;
    text-align: left;
    font-weight: bold;
}
.jm-card-menu .jm-title image{
    width: 48rpx;
    height: 48rpx;
    margin-right: 8rpx;
}

.jm-item {
    display: block;
    margin-right: 40rpx;
    width: 130rpx;
    height: 190rpx;
}

.jm-item-box {
    margin-right: 56rpx;
}

.jm-item-box:nth-child(4n) {
    margin-right: 0;
}

.jm-card-menu .jm-icon {
    display: block;
    width: 70rpx;
    height: 70rpx;
    padding: 30rpx;
    border-radius: 16rpx;
    /* background-color: rgba(227, 227, 227, 0.89); */
    color: rgba(16, 16, 16, 1);
    font-size: 28rpx;
    text-align: center;
    font-family: Roboto;
}

.jm-card-menu text {
    margin-top: 20rpx;
    height: 40rpx;
    line-height: 40rpx;
    color: rgb(62, 66, 72);
    font-size: 28rpx;
    text-align: center;
    text-align: center;
}